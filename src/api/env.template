# LearnPad API Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# GCS Configuration (Required for notebook file storage)
# ============================================================================

# Your Google Cloud Project ID
GCS_PROJECT_ID=your-project-id

# GCS Bucket Name (bucket must exist before running)
GCS_BUCKET_NAME=your-bucket-name

# Path to service account key file (relative to project root)
# Leave empty to use Application Default Credentials (recommended for local dev)
# Example: learnpad-backend-key.json
GCS_CREDENTIALS_PATH=

# Base path prefix in GCS (default: users)
GCS_BASE_PATH=users

# ============================================================================
# Google Cloud / Vertex AI Configuration (Optional - for deployed agents)
# ============================================================================

GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Notebook Engine ID (from agent deployment, optional)
NOTEBOOK_ENGINE_ID=

# Agent App Name (optional)
AGENT_APP_NAME=notebook_orchestrator

# ============================================================================
# JWT & Authentication Configuration
# ============================================================================

# Secret key for JWT token signing (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-very-secure-random-secret-key-min-32-characters

# JWT Algorithm
JWT_ALGORITHM=HS256

# Token expiration time in hours
JWT_EXPIRATION_HOURS=24

# ============================================================================
# Google OAuth Configuration
# ============================================================================

# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-app-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# ============================================================================
# Server Configuration
# ============================================================================

# CORS allowed origins (for local dev, adjust for production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8001"]

# Local notebook storage path (for temp files during generation)
NOTEBOOKS_BASE_PATH=./notebooks

# Assessment session TTL in hours
ASSESSMENT_SESSION_TTL_HOURS=24

